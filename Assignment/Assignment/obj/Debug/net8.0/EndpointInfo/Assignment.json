        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "maxLength": 50,
            "minLength": 0,
            "pattern": "^[A-Za-z\\s]+$",
            "type": "string"
          },
          "genderId": {
            "maximum": 255,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "stateId": {
